{
  "name": "vue3-next",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint \"{src,mock}/**/*.{vue,ts,tsx}\" --fix",
    "prepare": "husky install",
    "deploy": "sh deploy.sh"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,vue}": [
      "eslint  --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/node": "^14.17.12",
    "element-plus": "^1.0.2-beta.71",
    "less": "^4.1.1",
    "lint-staged": "^10.5.4",
    "particles.vue3": "^1.17.0",
    "sass": "^1.38.2",
    "sass-loader": "^11.0.1",
    "vue": "^3.2.6",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@vitejs/plugin-vue": "^1.6.0",
    "@vue/compiler-sfc": "^3.2.6",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-vue": "^7.17.0",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.4.2",
    "vite": "^2.5.1",
    "vue-tsc": "^0.0.15"
  }
}
